    @SuppressWarnings("empty-statement")
    private void btnStartActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnStartActionPerformed

        R0.setRegName("R0");
        R1.setRegName("R1");
        R2.setRegName("R2");
        R3.setRegName("R3");
        if (this.running) {
         
           this.running = false;
           btnStart.setBackground(Color.red);
           btnStart.setText("Start Computer");
        }
        else {
           this.running = true;
           btnStart.setBackground(Color.green);
           btnStart.setText("Running. Click to stop");
        }
   
    }//GEN-LAST:event_btnStartActionPerformed

    private void btnDecomposeActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnDecomposeActionPerformed

        String strAllCommand = txtCommand.getText();
        String cmd = strAllCommand.substring(0, 2);
        String[] parts = strAllCommand.substring(4, strAllCommand.length()).split(",");
        
        switch (parts[0]) {
            case "1":
                txtR1.setText(parts[2]);
                txtR1.setText(Long.toBinaryString(Integer.parseInt(parts[2])));
                 break;
            case "2":
                txtR2.setText(parts[2]);
                break;
            case "3":
               txtR3.setText(parts[2]);
               break;
             case "0":
               txtR0.setText(parts[2]);
               break;
                 
        }
        
    }//GEN-LAST:event_btnDecomposeActionPerformed

    private void btnDepositActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnDepositActionPerformed
        
        String OPCODE="",  GPR = "", XR="", IND = "", Trace="", Addr="";
        
        OPCODE += jRadioButton1.isSelected() ? "1" : "0";
        OPCODE += jRadioButton2.isSelected() ? "1" : "0";
        OPCODE += jRadioButton3.isSelected() ? "1" : "0";
        OPCODE += jRadioButton4.isSelected() ? "1" : "0";
        OPCODE += jRadioButton5.isSelected() ? "1" : "0";
        OPCODE += jRadioButton6.isSelected() ? "1" : "0";
        GPR += jRadioButton7.isSelected() ? "1" : "0";
        GPR += jRadioButton8.isSelected() ? "1" : "0";
        XR += jRadioButton9.isSelected() ? "1" : "0";
        XR += jRadioButton10.isSelected() ? "1" : "0";
        IND += jRadioButton11.isSelected() ? "1" : "0";
        Trace += jRadioButton12.isSelected() ? "1" : "0";
        Addr += jRadioButton13.isSelected() ? "1" : "0";
        Addr += jRadioButton14.isSelected() ? "1" : "0";
        Addr += jRadioButton15.isSelected() ? "1" : "0";
        Addr += jRadioButton16.isSelected() ? "1" : "0";
        Addr += jRadioButton17.isSelected() ? "1" : "0";
        Addr += jRadioButton18.isSelected() ? "1" : "0";
        Addr += jRadioButton19.isSelected() ? "1" : "0";
        Addr += jRadioButton20.isSelected() ? "1" : "0";
        
        jLabel12.setText(OPCODE);
        
        switch (GPR) {
            case "00":
               R0.setValue(Addr);
               break;
            case "01":
               R1.setValue(Addr);
                break;
            case "10":
               R2.setValue(Addr);
               break;
             case "11":
               R3.setValue(Addr);
               break;
                 
        }
      
    }//GEN-LAST:event_btnDepositActionPerformed

